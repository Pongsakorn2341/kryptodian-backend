generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EUserRole {
  SUPER_ADMIN
  ADMIN
  USER
}

enum EUserStatus {
  DEMO
  COMMERCIAL
}

enum EDataProvider {
  COIN_GECKO
  COIN_MARKET_CAP
}

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  name          String
  profile_image String?
  password      String
  status        EUserStatus @default(DEMO)
  role          EUserRole   @default(USER)

  is_active Boolean @default(true)

  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  Portfolios Portfolio[]

  @@index([status, email, is_active])
  @@map("user")
}

model Portfolio {
  id   String @id @default(uuid())
  name String

  created_by String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  User  User?  @relation(fields: [created_by], references: [id])
  Coins Coin[]

  @@map("portfolio")
}

model Coin {
  id   String @id @default(uuid())
  name String

  reference_id String
  network_id   String
  address      String

  portfolio_id String

  created_by String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Transaction Transaction[]
  Portfolio   Portfolio     @relation(fields: [portfolio_id], references: [id])

  @@unique([network_id, address, created_by, portfolio_id])
  @@map("coin")
}

model Transaction {
  id String @id @default(uuid())

  coin_id String

  quantity Int
  price    Float
  total    Float

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Coin Coin @relation(fields: [coin_id], references: [id])

  @@map("transaction")
}

model DataProvider {
  id   String        @id @default(uuid())
  name String
  type EDataProvider @default(COIN_GECKO)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("data_provider")
}
